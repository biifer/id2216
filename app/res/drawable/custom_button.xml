<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/green"
                android:endColor="@color/green_grad"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="@color/green" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    
	    <item android:state_focused="true" >
        <shape>
            <gradient
                android:endColor="@color/orange_faded"
                android:startColor="@color/orange"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/orange_faded" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>
    
    <item>        
        <shape>
            <gradient
                android:endColor="@color/green_faded"
                android:centerColor="@color/green_darker"
                android:startColor="@color/green"
                android:angle="270" />
             <stroke android:width="1dp" android:color="@color/green_faded" />>
            <corners
                android:radius="3dp" />
            <padding
                android:left="10dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="10dp" />
        </shape>
    </item>

</selector>